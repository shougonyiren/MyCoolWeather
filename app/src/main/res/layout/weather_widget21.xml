<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000099CC"
    android:padding="@dimen/widget_margin">
    <Button
        android:id="@+id/buttontomain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:backgroundTint="#00FFFFFF"
        android:text="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_100d"
            android:id="@+id/imageViewwidget"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/textwiget"
                android:id="@+id/textViewwidget"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="25sp"
                android:text="TextView" />
            <TextView
                android:textColor="@color/textwiget"
                android:layout_weight="1"
                android:id="@+id/textViewwidget1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>